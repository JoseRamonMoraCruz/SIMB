<?xml version="1.0" encoding="utf-8"?>

  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#013a65"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>


  <TextView
      android:id="@+id/tvHoraActivacion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tvStatus"
      android:layout_alignParentStart="true"
      android:layout_marginStart="30dp"
      android:layout_marginTop="100dp"
      android:text="Activación a la(s): "
      android:textColor="#FFFFFF"
      android:textSize="18sp" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_below="@+id/tvHoraActivacion"
      android:layout_alignParentStart="true"
      android:layout_marginStart="-90dp"
      android:layout_marginTop="1dp"
      android:background="#FFFFFF" />

  <View
      android:id="@+id/view2"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="-2dp"
      android:layout_marginTop="253dp"
      android:background="#FFFFFF" />


  <View
      android:id="@+id/view4"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="-2dp"
      android:layout_marginTop="326dp"
      android:background="#FFFFFF" />

  <TextView
      android:id="@+id/tvDuracionMovimiento"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tvHoraActivacion"
      android:layout_alignParentStart="true"
      android:layout_marginStart="30dp"
      android:layout_marginTop="50dp"
      android:text="Duración del movimiento: "
      android:textColor="#FFFFFF"
      android:textSize="18sp" />

  <TextView
      android:id="@+id/tvIntensidadMovimiento"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tvDuracionMovimiento"
      android:layout_alignParentStart="true"
      android:layout_marginStart="30dp"
      android:layout_marginTop="50dp"
      android:text="Intensidad del movimiento: "
      android:textColor="#FFFFFF"
      android:textSize="18sp" />

  <ImageView
        android:id="@+id/imageView3"
        android:layout_width="142dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="-5dp"
        app:srcCompat="@drawable/cabecera" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="154dp"
        android:layout_marginTop="20dp"
        android:text="ACTIVO"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="160dp"
        android:src="@drawable/circle_green" />




</RelativeLayout>
