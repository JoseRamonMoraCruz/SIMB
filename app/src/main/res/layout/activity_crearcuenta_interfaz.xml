<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".crearcuentaInterfaz">

    <TextView
        android:id="@+id/tvlogout"
        android:layout_width="258dp"
        android:layout_height="117dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/dancing_script"
        android:text="Log Out"
        android:textAlignment="center"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/logoredondaapp" />

    <EditText
        android:id="@+id/etNombreCompletologout"
        android:layout_width="231dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/item_border_button"
        android:backgroundTint="@color/azulverdonso"
        android:ems="10"
        android:fontFamily="@font/abril_fatface"
        android:hint="Nombre Completo"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvlogout" />

    <EditText
        android:id="@+id/etTelegonologout"
        android:layout_width="231dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/item_border_button"
        android:backgroundTint="@color/azulverdonso"
        android:ems="10"
        android:fontFamily="@font/abril_fatface"
        android:hint="Telefono"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNombreCompletologout" />

    <EditText
        android:id="@+id/etEmaillogout"
        android:layout_width="231dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/item_border_button"
        android:backgroundTint="@color/azulverdonso"
        android:ems="10"
        android:fontFamily="@font/abril_fatface"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTelegonologout" />

    <EditText
        android:id="@+id/etPasswordlogout"
        android:layout_width="231dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:autofillHints="Contraseña"
        android:background="@drawable/item_border_button"
        android:backgroundTint="@color/azulverdonso"
        android:ems="10"
        android:fontFamily="@font/abril_fatface"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmaillogout" />

    <Button
        android:id="@+id/btnCrearlogout"
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:background="@drawable/border_button"
        android:fontFamily="@font/dancing_script"
        android:text="Crear"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTengocuentalogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordlogout"
        app:layout_constraintVertical_bias="0.428" />

    <Button
        android:id="@+id/btnTengocuentalogout"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="Tengo Cuenta"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>